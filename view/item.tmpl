<style>

@media (min-width: 700px) {
  body {
    width: 960px;
  }
}

.header {
  display: flex;
  flex-wrap: wrap;
  background-color: black;
  height: 50px;
}
.header div {
  display: inline-block;
}
.search {
  height: 42px;
  width:  98%;
  border-right: none;
  border-left: none;
  border-top: none;
  background-color: black;
  border-bottom-color: white;
  color:white;
  font-size: 18px;
}
.header img {
  margin-top: 10px;
  max-height: 32px;
}
.search_submit {
  opacity: 0;
  position: absolute;
  height: 50px;
  width: 100%;
  left: 0;
}
#search_detail + input {
  width: 100%;
  height: 48px;
  cursor: pointer;
  opacity: 0;
  position: absolute;
  left: 0;
}
#search_detail + input:checked + .dropdown {
  visibility: visible;
}
@media (max-width: 700px) {
  .dropdown{
    visibility: hidden;
    position: absolute;
    background-color: gainsboro;
    margin: 50px 0 0 -310px;
    width: 300px;
    text-align: left;
    padding: 10px;
    border-radius: 10px;
  }
}
@media (min-width: 700px) {
  .dropdown{
    visibility: hidden;
    position: absolute;
    text-align: left;
    background-color: gainsboro;
    margin: 50px 0 0 -400px;
    width: 400px;
    padding: 10px;
    border-radius: 10px;
  }
}
.dropdown div {
  padding: 4% 2%;
}
.dropdown input {
  height: 42px;
  border-radius: 10px;
}

.dropdown select {
  padding: 14px 2px;
  width: 280px;
  border-radius: 10px;
  background-color: white;
}
.multi_option {
  display: inline-block;
  position: relative;
  margin: 14px 4px;
}
.multi_option input {
  opacity: 0;
  position: absolute;
}
.option_ui {
  background-color: white;
  padding: 10px;
  border-radius: 10px;
}
.multi_option input:checked + .option_ui {
  background-color: gray;
}
</style>
<body>

<form action="/list/" >
<div class="header" >
  <div style="width: 12%;text-align: center;">
    <a href="/" >
      <img src="/img/man.png" >
    </a>
  </div>
  <div style="width: 60%;text-align: center;" >
    <input type="text" name="word" class="search" >
  </div>
  <div style="width: 12%;text-align: center;position: relative;" >
    <input type="submit" class="search_submit">
    <img src="/img/glass.png">
  </div>
  <div style="width: 10%;text-align: center;position: relative;">
    <img src="/img/filter.png" id="search_detail" >
    <input type="checkbox" >
    <div class="dropdown">
      {{ range $k, $v := .SearchList }}
      <div>
        {{ if eq $v.SType "1" }}
        <select name="dd{{$k}}">
          <option value=""> - - {{$v.Name}} - - </option>
          {{range $k2, $v2 := $v.Values}}
          <option value="vid{{index $v2 0}}">{{ index $v2 1}}</option>
          {{end}}
        </select>
        {{end}}
        {{ if eq $v.SType "3" }}
          {{$v.Name}}<br>
          {{range $k2, $v2 := $v.Values}}
          <label for="label{{$k}}{{$k2}}" class="multi_option">
            <input type="checkbox" name="vid{{index $v2 0}}" id="label{{$k}}{{$k2}}" checked>
            <span class="option_ui">{{ index $v2 1}}</span>
          </label>
          {{end}}
        {{end}}
      </div>
      {{end}}
      <div>
        <select name="GenreId">
          <option value=""> - - Genre - - </option>
          {{range $v := .Genres}}
          <option value="{{$v.ID}}">{{$v.Name}}</option>
          {{end}}
        </select>
      </div>
      <div><input type="text" name="exclude" placeholder="含まないキーワード"></div>
      <div>
        <input type="text" placeholder="低い価格" name="minPrice" style="width: 100px;"> ~ <input type="text" placeholder="高い価格" name="maxPrice" style="width: 100px;">
      </div>
    </div>
  </div>
</div>
</form>

