    <script src="/plugin/min.js"></script>
    <link rel="stylesheet" href="/css/common.css" />
    <meta name="viewport" content="width=device-width, user-scalable=no" >
  </head>
<body>

<style>

.main {
  display: flex;
  flex-wrap: wrap;
}
@media (min-width: 700px) {
  .signin {
    width: 45%;
    margin: 2%;
  }
  .signup {
    width: 45%;
    margin: 2%;
  }
}
@media (max-width: 700px) {
  .signin {
    width: 90%;
    margin: 5% auto;
  }
  .signup {
    width: 90%;
    margin: 5% auto;
  }
}

input {
  border-radius: 10px;
  width: 70%;
  display: block;
  margin: 10px;
  padding: 10px;
}
/* .error {
  display: none;
} */
input:invalid + .password1::after {
  content: "at least one character, one number, one special character";
  color: red;
}

</style>

<div class="main">
  <div class="signin">
    <div class="login-form-inner">
      <button id="google-login" class="btn-default btn-sns btn-sns-google">
        Googleでログイン
      </button>
      <button id="facebook-login" class="btn-default btn-sns btn-sns-facebook">
        <i class="icon-facebook"></i>
        Facebookでログイン
      </button>
    </div>
    <div>
      <form id="login" onsubmit="login()">
      <input type="email" name="email" placeholder="mail" required 
      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="must be email format" >
      <input type="password" name="password" placeholder="password" required
       pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,12}$" 
       title="at least one character, one number, one special character" >
      <input type="submit" value="login">
      </form>
    </div>
  </div>
  <div class="signup">
    <div>
      <form id="register" onsubmit="registering()">
      <input type="email" name="email" placeholder="mail" required 
      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="must be email format" >
      <input type="password" name="password1" placeholder="password" required
       pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,12}$" 
       title="at least one character, one number, one special character" >

      <input type="password" name="password2" placeholder="password confirm" required 
      oninput="check(this)" >
      <input type="text" name="familyName" placeholder="family name" required pattern="[^/#&?%.\-+_=@ '&quot;]+">
      <input type="text" name="givenName" placeholder="giving name" required pattern="[^/#&?%.\-+_=@ '&quot;]+">
      <input type="date" name="birthday" required>
      <input type="submit" value="登録" > 
      <!-- onclick="showErr()" -->
      </form>
    </div>
  </div>
</div>


<style>
.footer {
  padding: 10px;
  background-color: black;
}
.footer a {
  padding: 2px 10px;
  font-size: 14px;
  width: 100px;
  display: inline-block;
  vertical-align: middle;
  text-align: left;
  color: whitesmoke;
}
</style>

